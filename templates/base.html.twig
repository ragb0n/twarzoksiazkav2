<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %} 
            {# szuka skryptow javascript w folderze public/build, po nazwie pliku #}
            {{ encore_entry_script_tags('app') }} 
        {% endblock %}
    </head>

     <body class="bg-gray-200 h-screen antialiased leading-none font-sans">
            {% block header %}
                <header>
                    <nav class="bg-blue-700 flex items-center justify-between flex-wrap p-6 fixed w-full z-10 top-0">
                        <div class="flex items-center flex-shrink-0 text-white mr-6">
                            <a class="text-white no-underline hover:text-white hover:no-underline" href="/">
                                <span class="bg-blue-700 text-2xl pl-2 font-extrabold italic">
                                    twarzoksiążka V2 </br>
                                </span>
                            </a>
                        </div>

                        <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto">
                            <ul class="pt-6 lg:pt-0 list-reset lg:flex justify-end flex-1 items-center">
                                <li class="mr-3">
                                    <a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/feed">
                                        Strona Główna
                                    </a>
                                </li>

                                <li class="mr-3">
                                    <a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/users/search">
                                        Szukaj osób
                                    </a>
                                </li>

                                <li class="mr-3">
                                    <a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/user">
                                        Profil
                                    </a>
                                </li>

                                <li class="mr-3">
                                    <a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/friends">
                                        Znajomi
                                    </a>
                                </li>        
                                <li class="mr-3">
                                    <a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/messages">
                                        Wiadomości
                                    </a>
                                </li>    
                                 <li class="mr-3">
                                    <a class="inline-block text-gray-300 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" href="/">
                                        Login
                                    </a>
                                </li>                                
                            </ul>
                        </div>
                    </nav>
                </header>
            {% endblock %}
            <div class="pt-24 pb-4 w-4/6 m-auto">
            {% block body %}{% endblock %}
            </div>
            {% block footer %}
                <footer>
                    <p class="w-25 w-4/5 text-center pb-3 m-auto text-base text-black pt-6">
                        Copyright 2023 Twarzoksiążka V2. All Rights Reserved
                    </p>
                </footer>
            {% endblock %}
    </body>
</html>
