
{% extends 'base.html.twig' %}

{% block body %}   
<div class="w-4/5">
    <div class="w-full">
        <div class="text-white drop-shadow-md text-center italic font-extrabold text-3xl">
            Znajd≈∫ swoich znajomych!
        </div>
    </div>
    {{ form_start(form, {'attr': {'class': 'mt-4 mb-4'}}) }}
    <div class="w-full">
        {{ form_row(form.searchKeyword, {'attr': {'class': 'py-2 px-4 border border-gray-300 rounded-t focus:outline-none focus:border-blue-500 flex-1 w-full'}}) }}
        <button type="submit" class="h-10 w-full py-2 px-6 bg-blue-700 text-white font-extrabold rounded-b hover:bg-blue-400 focus:outline-none">
            Szukaj!
        </button>
    </div>
    {{ form_end(form) }}
    <div class="flex flex-wrap items-stretch justify-between w-full">
    {% for user in users %}
        <div class="pb-10 bg-white rounded-md grow w-1/10 hover:drop-shadow-2xl transition duration-150">
            <a href="/user/{{ user.id }}">
                <div class="w-full pt-5 pb-5">
                    <img class="w-20 h-20 rounded-full m-auto" src="{{ asset('build/images/piesek.cb296c0f.jpg') }}">
                </div>
                <div class="text-center font-bold">
                    {{ user.firstName }}
                </div>
                <div class="text-center font-bold">
                    {{ user.lastName }}
                </div>
            </a>
        </div>
        {% else %}
            Niestety! Nikogo takiego nie znaleziono &#x1F614
        {% endfor %}
    </div>
</div>
{% endblock %}
